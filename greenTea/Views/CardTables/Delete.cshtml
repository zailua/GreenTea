@model greenTea.Models.CardTable

@{
    ViewData["Title"] = "Delete";
}

<hr />
<div class="container">
    <h1>Deletar</h1>
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Atenção!</h4>
        <h3>Você realmente quer excluir este item?</h3>
        <hr>
        <p class="mb-0">Lembrando que sempre que precisar, você também pode editar o pictograma.  ; )</p>

    </div>
    <div class="card filtr-item col col-sm-2 col-lg-4 card-edit "
         style="background: @Html.DisplayFor(model => model.Categoria.Cor); border: #fff solid 2px;">

        <img src="@Html.DisplayFor(model => model.Img)" alt="sample" />

        <div class="card-edit-textos">
            <div><p>@Html.DisplayFor(model => model.Nome)</p></div>

            <p>@Html.DisplayFor(model => model.Categoria.Nome)</p>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning  m-2"><i class="fas fa-user-edit"></i> -Editar-</a>
        </div>
    </div>
    <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger mr-2" /> |
            <a asp-action="Index" class="btn btn-primary ml-2">Voltar</a>
        </form>
</div>


